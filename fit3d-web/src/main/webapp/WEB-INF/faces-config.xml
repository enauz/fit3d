<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
        version="2.2">
    <application>
        <locale-config>
            <default-locale>en_US</default-locale>
        </locale-config>
    </application>
    <converter>
        <converter-id>uuidConverter</converter-id>
        <converter-class>bio.fkaiser.fit3d.web.converter.UUIDConverter</converter-class>
    </converter>
    <converter>
        <converter-id>aminoAcidFamilyConverter</converter-id>
        <converter-class>bio.fkaiser.fit3d.web.converter.AminoAcidFamilyConverter</converter-class>
    </converter>
    <managed-bean>
        <managed-bean-name>submitJobView</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.view.SubmitJobView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>jobManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.application.JobManager</property-class>
            <value>#{jobManager}</value>
        </managed-property>
        <managed-property>
            <property-name>sessionManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.session.SessionManager</property-class>
            <value>#{sessionManager}</value>
        </managed-property>
        <managed-property>
            <property-name>jobExecutor</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.application.JobExecutor</property-class>
            <value>#{jobExecutor}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jobManager</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.application.JobManager</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>jobExecutor</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.application.JobExecutor</property-class>
            <value>#{jobExecutor}</value>
        </managed-property>
        <managed-property>
            <property-name>jobLoadManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.application.JobLoadManager</property-class>
            <value>#{jobLoadManager}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jobListView</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.view.JobListView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>jobManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.application.JobManager</property-class>
            <value>#{jobManager}</value>
        </managed-property>
        <managed-property>
            <property-name>sessionManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.session.SessionManager</property-class>
            <value>#{sessionManager}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>resultView</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.view.ResultView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>sessionManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.session.SessionManager</property-class>
            <value>#{sessionManager}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jobExecutor</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.application.JobExecutor</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>dataProvider</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.application.DataProvider</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jobLoadManager</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.application.JobLoadManager</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>chartView</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.view.ChartView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>mapBean</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.utilities.MapBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>extractView</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.view.ExtractView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>sessionManager</property-name>
            <property-class>bio.fkaiser.fit3d.web.beans.session.SessionManager</property-class>
            <value>#{sessionManager}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>sessionManager</managed-bean-name>
        <managed-bean-class>bio.fkaiser.fit3d.web.beans.session.SessionManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <display-name>submit.xhtml</display-name>
        <from-view-id>/submit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/jobs.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>jobs.xhtml</display-name>
        <from-view-id>/jobs.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/result.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>submit.xhtml</display-name>
        <from-view-id>/submit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/submit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>jobs.xhtml</display-name>
        <from-view-id>/jobs.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/jobs.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <factory>
        <exception-handler-factory>
            bio.fkaiser.fit3d.web.exceptions.Fit3DExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
</faces-config>
